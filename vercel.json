{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/weather",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/weather.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}